<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="br.com.softcare.cuidadores.activity.BuscaActivity"
    android:id="@+id/activity_busca"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/cuidadores"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <EditText
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/busca_zipcode"
            android:textColorHint="#52ab7d"
            android:hint="@string/busca_zipcode" />
        <EditText
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/busca_rua"
            android:textColorHint="#52ab7d"
            android:hint="@string/rua" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <EditText
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
        android:id="@+id/busca_bairro"
        android:textColorHint="#52ab7d"
        android:hint="@string/busca_bairro" />
    <EditText
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/busca_cidade"
        android:textColorHint="#52ab7d"
        android:hint="@string/busca_cidade" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
    <EditText
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/busca_estado"
        android:textColorHint="#52ab7d"
        android:hint="@string/busca_estado" />

    <EditText
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/busca_email"
        android:textColorHint="#52ab7d"
        android:hint="@string/busca_email" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <EditText
        android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
        android:id="@+id/busca_contato"
        android:textColorHint="#52ab7d"
        android:hint="@string/telefone" />
    </LinearLayout>

    <TextView
        android:text="@string/disponibilidade"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#52ab7d"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:text="@string/segunda"
            android:textColor="#52ab7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/busca_segunda" />

        <CheckBox
            android:text="@string/terca"
            android:textColor="#52ab7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/busca_terca" />

        <CheckBox
            android:text="@string/quarta"
            android:textColor="#52ab7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/busca_quarta"/>

        <CheckBox
            android:text="@string/quinta"
            android:textColor="#52ab7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/busca_quinta"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:text="@string/sexta"
            android:textColor="#52ab7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/busca_sexta" />

        <CheckBox
            android:text="@string/sabado"
            android:textColor="#52ab7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/busca_sabado" />

        <CheckBox
            android:text="@string/domingo"
            android:textColor="#52ab7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/busca_domingo"/>

    </LinearLayout>

    <TextView
        android:text="@string/periodo"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#52ab7d"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:text="@string/manha"
            android:textColor="#52ab7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/busca_manha" />

        <CheckBox
            android:text="@string/tarde"
            android:textColor="#52ab7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/busca_tarde" />

        <CheckBox
            android:text="@string/noite"
            android:textColor="#52ab7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/busca_noite"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/busca_botao"
        android:textColor="#52ab7d"
        android:layout_marginTop="10dp"
        android:text="BUSCAR"
        android:onClick="buscar"
        android:background="@drawable/fundobotao"
        />

    </LinearLayout>
</ScrollView>