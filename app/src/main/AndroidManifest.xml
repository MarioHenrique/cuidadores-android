<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gp1.ihc.cuidadores">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="br.com.softcare.cuidadores.activity.LoginActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="Cuidadores">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.softcare.cuidadores.activity.BuscaActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="Buscar Cuidadores" />
        <activity
            android:name="br.com.softcare.cuidadores.activity.ListaActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="Cuidadores" />
        <activity
            android:name="br.com.softcare.cuidadores.activity.CadastroActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="Cadastrar" />
        <activity android:name="br.com.softcare.cuidadores.activity.MenuActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name="br.com.softcare.cuidadores.activity.UsuarioActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="Usuario" />
        <activity android:name="br.com.softcare.cuidadores.activity.CuidadorActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="br.com.softcare.cuidadores.activity.PacienteActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="br.com.softcare.cuidadores.activity.PacienteEditActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="br.com.softcare.cuidadores.activity.TratamentoActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="br.com.softcare.cuidadores.activity.TratamentoEditActivity"
            android:windowSoftInputMode="stateHidden"></activity>
    </application>

</manifest>